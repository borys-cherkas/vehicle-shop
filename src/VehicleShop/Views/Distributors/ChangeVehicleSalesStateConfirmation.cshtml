@model VehicleShop.Models.Distributor.ChangeVehicleSalesStateViewModel


@{
    ViewBag.Title = Model.NewSalesState ? "Start Vehicle Sales" : "Stop Vehicle Sales";
    Layout = "_Layout";
}

@if (Model.NewSalesState)
{
    <h2>Are you sure you want to start selling this car with @Model.Vehicle.Cost$ price?</h2>
}
else
{
    <h2>Are you sure you want to stop selling this car?</h2>
}


<form asp-action="ChangeVehicleSalesState" method="post">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.VehicleId)
    @Html.HiddenFor(x => x.Vehicle)
    @Html.HiddenFor(x => x.NewSalesState)

    <button class="btn btn-success" type="submit">Yes</button>
    <a class="btn btn-warning" asp-action="Index">No</a>
</form>