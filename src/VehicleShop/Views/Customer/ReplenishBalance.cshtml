@model ReplenishAccountViewModel
@{
    ViewData["Title"] = "Replenish Balance";
}

<h2>@ViewData["Title"].</h2>

<form asp-controller="Customer" asp-action="ReplenishBalance" method="post" class="form-horizontal">
    <h4>Replenish Balance Form</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Amount" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Amount" class="form-control" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Replenish!</button>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
