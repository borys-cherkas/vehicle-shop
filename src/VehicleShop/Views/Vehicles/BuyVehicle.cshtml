@model Vehicle

@{
    ViewBag.Title = "Buy Vehicle";
    Layout = "_Layout";
}

<h2>Are you sure you want to buy this vehicle? It costs @Model.Cost$!</h2>

<form asp-action="BuyVehicle" method="post">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.Id)

    <button class="btn btn-success" type="submit">Yes</button>
</form>
<a class="btn btn-danger" asp-action="Index">No</a>